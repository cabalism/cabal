program-options
  ghc-options: -fno-ignore-asserts

import: project-cabal/pkgs/cabal.config
import: project-cabal/pkgs/tests.config
import: project-cabal/constraints.config

package Cabal-syntax
  ghc-options: -Werror
package Cabal
  ghc-options: -Werror
package cabal-testsuite
  ghc-options: -Werror

tests: True
write-ghc-environment-files: never

-- REVIEW: Is the exception for cryptohash-sha256 still needed?
-- SEE: https://github.com/haskell-hvr/cryptohash-sha256/issues/12
allow-newer: cryptohash-sha256:base